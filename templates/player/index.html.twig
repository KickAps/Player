{% extends 'base.html.twig' %}

{% block title %}Hello PlayerController!{% endblock %}

{% block body %}
    <div class="text-center m-4">
        <a type="button" href="{{ path('app_admin') }}" class="btn btn-primary">
            Admin
        </a>
    </div>

    <div class="text-center m-4">
        The Player
    </div>

    <div class="text-center m-4">
        {% for flag, video_list in video_by_flag %}
        <a type="button" id="{{ 'flag_' ~ loop.index0 }}" class="btn btn-primary">
            {{ flag }}
        </a>
        {% endfor %}
        {% for flag, video_list in video_by_flag %}
        <div id="{{ 'video_list_' ~ loop.index0 }}" {{ loop.first ? '' : 'hidden' }}>
            {% for row in video_list|sort((a, b) => b.year <=> a.year)|batch(4) %}
            <div class="row">
                {% for video in row %}
                    <div class="col-md-3 mb-4">
                        <article class="bg-white rounded shadow p-3">
                            <div class="article">
                                <h3 class="text-center text-secondary font-weight-bold pb-3 m-0">
                                    <a href="{{ path('app_player', {'id' : video.id}) }}" class="text-secondary text-decoration-none">{{ video.title }}</a>
                                </h3>
                                <div class="mw-100 rounded overflow-hidden mb-3">
                                    <a href="{{ path('app_player', {'id' : video.id}) }}">
                                        <img src="{{ asset('/thumbnails/' ~ video.thumbnail) }}" alt="Image" class="w-100">
                                    </a>
                                </div>
                            </div>
                            <div class="text-muted">
                                <small><b>{{ video.year }}</b></small>
                            </div>
                        </article>
                    </div>
                {% endfor %}
            </div>
            {% endfor %}
        </div>
        {% endfor %}
    </div>
{% endblock %}
