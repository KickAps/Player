{% extends 'base.html.twig' %}

{% block title %}Hello PlayerController!{% endblock %}

{% block body %}
    <div class="text-center m-4">
        <a href="{{ path('app_index') }}" class="btn btn-secondary">
            Return
        </a>
    </div>

    <div>
        <div class="player-container w-50 m-auto">
            {% if file_exists(videos_dir ~ video_path) %}
                <video width="100%" controls>
                    <source src="{{ asset('videos/' ~ video_path) }}" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            {% else %}
                <span>En attente du fichier vid√©o sur le serveur</span>
            {% endif %}
        </div>
    </div>
{% endblock %}
